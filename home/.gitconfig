[user]
	name = Daniel Perez
	email = daniel@perez.sh
	signingkey = daniel@perez.sh

[push]
	default=simple

[core]
	excludesfile=~/.gitignore_global
	askPass =
	pager = 'lv'
[branch "master"]
	rebase = true
[alias]
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pager]
	branch = false
