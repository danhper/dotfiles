{
  "layer": "top",
  "position": "top",
  "output": ["DVI-D-1"],
  "height": 30, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)
  "modules-left": [
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "cpu",
    "memory",
    "clock",
    "tray"
  ],
  "hyprland/workspaces": {
    "all-outputs": true,              // show workspaces from every monitor
    "active-only": false,
    "show-special": false,
    "sort-by": "name",
    "format": "{icon}",
    "format-icons": {
      "visible": "",
      "active": "",                 // focused on other monitor
      "default": "",
      "empty": "",
      "persistent": ""
    },
    "persistent-workspaces": { "*": 1 }
  },
  "hyprland/workspaces#current": {
    "format": "{name}",
    "active-only": true,
    "all-outputs": true
  },
  "tray": {
    "spacing": 5
  }
}

