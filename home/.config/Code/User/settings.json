{
    "editor.fontSize": 17,
    "editor.fontFamily": "'Inconsolata', 'Ricty', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.tabSize": 2,
    "editor.rulers": [80],
    "editor.renderWhitespace": "all",
    "search.useGlobalIgnoreFiles": true,
    "rewrap.wrappingColumn": 80,

    "workbench.colorTheme": "Tomorrow Night",
    "workbench.colorCustomizations": {
        "statusBar.background": "#202227"
    },

    "workbench.activityBar.visible": false,
    "workbench.editor.showTabs": true,
    "workbench.startupEditor": "newUntitledFile",
    "window.titleBarStyle": "native",

    "window.menuBarVisibility": "hidden",
    "window.titleBarStyle": "native",
    "window.zoomLevel": -1,

    "[c]": {
        "editor.tabSize": 4
    },
    "[cpp]": {
        "editor.tabSize": 4
    },
    "[go]": {
        "editor.tabSize": 4
    },
    "[makefile]": {
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "[haskell]": {
        "editor.tabSize": 4
    },

    "reason.codelens.enabled": false,

    "vim.easymotion": true,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "<space>"],
            "commands": [{"command": "workbench.action.showCommands"}]
        },
        {
            "before": ["<leader>", "'"],
            "commands": [{"command": "workbench.action.terminal.toggleTerminal"}]
        },
        {
            "before": ["<leader>", "/"],
            "commands": [{"command": "workbench.action.findInFiles"}]
        },
        {
            "before": ["<leader>", "1"],
            "commands": [{"command": "workbench.action.focusFirstEditorGroup"}]
        },
        {
            "before": ["<leader>", "2"],
            "commands": [{"command": "workbench.action.focusSecondEditorGroup"}]
        },
        {
            "before": ["<leader>", "3"],
            "commands": [{"command": "workbench.action.focusThirdEditorGroup"}]
        },
        {
            "before": ["<leader>", "b", "b"],
            "commands": [{"command": "workbench.action.showAllEditors"}]
        },
        {
            "before": ["<leader>", "f", "D"],
            "commands": [{"command": "fileutils.removeFile"}]
        },
        {
            "before": ["<leader>", "e", "l"],
            "commands": [{"command": "workbench.actions.view.problems"}]
        },
        {
            "before": ["<leader>", "f", "e"],
            "commands": [{"command": "workbench.action.openGlobalSettings"}]
        },
        {
            "before": ["<leader>", "f", "R"],
            "commands": [{"command": "fileutils.renameFile"}]
        },
        {
            "before": ["<leader>", "f", "t"],
            "commands": [{"command": "workbench.view.explorer"},
                         {"command": "workbench.action.focusFirstEditorGroup"}]
        },
        {
            "before": ["<leader>", "g", "s"],
            "commands": [{"command": "workbench.view.scm"}]
        },
        {
            "before": ["<leader>", "p", "p"],
            "commands": [{"command": "workbench.action.openRecent"}]
        },
        {
            "before": ["<leader>", "q", "r"],
            "commands": [{"command": "workbench.action.reloadWindow"}]
        },
        {
            "before": ["<leader>", "t", "w"],
            "commands": [{"command": "editor.action.toggleRenderWhitespace"}]
        },
        {
            "before": ["<leader>", "t", "f"],
            "commands": [{"command": "workbench.action.toggleSidebarVisibility"},
                         {"command": "workbench.action.focusFirstEditorGroup"}]
        },
        {
            "before": ["<leader>", "t", "t"],
            "commands": [{"command": "workbench.action.toggleActivityBarVisibility"}]
        },
        {
            "before": ["<leader>", "t", "z"],
            "commands": [{"command": "workbench.action.toggleZenMode"}]
        },
        {
            "before": ["<leader>", "v"],
            "commands": [{"command": "editor.action.smartSelect.grow"}],
        },
        {
            "before": ["<leader>", "V"],
            "commands": [{"command": "editor.action.smartSelect.shrink"}]
        },
        {
            "before": ["<leader>", "w", "v"],
            "commands": [{"command": "workbench.action.splitEditorRight"}]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": [{"command": "workbench.action.splitEditorOrthogonal"}]
        },
        {
            "before": ["<leader>", "w", "m"],
            "commands": [{"command": "workbench.action.closeEditorsInOtherGroups"}]
        }
    ],
    "cSpell.language": "en",
    "cSpell.enabledLanguageIds": [
        "css",
        "html",
        "jade",
        "json",
        "latex",
        "less",
        "markdown",
        "plaintext",
        "pub",
        "restructuredtext",
        "scss",
        "text",
        "yml"
    ],
    "cSpell.userWords": [
        "compositionality",
        "dataset",
        "stateful"
    ],
    "editor.minimap.enabled": true,
    "rust.rustup": {
        "toolchain": "nightly-x86_64-unknown-linux-gnu",
        "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
    },
    "rust.mode": "rls",
    "rust.rls": {
        "useRustfmt": true
    },
    "latex-workshop.message.update.show": false,
    "jupyter.appendResults": true,
    "breadcrumbs.enabled": true,
    "files.associations": {
        "*.bats": "shellscript"
    },
    "go.lintTool": "gometalinter",
    "go.lintFlags": [
        "--disable-all",
        "--enable=golint",
        "--config=~/.gometalinter"
    ],
    "haskelly.codeCompletion": true,
    "python.pythonPath": "~/.asdf/shims/python",
    "center-editor-window.threeStateToggle": true,
    "C_Cpp.updateChannel": "Insiders",
    "python.dataScience.decorateCells": false,
    "c-cpp-flylint.flexelint.enable": false
}
