export DEFAULT_USER=daniel
export EDITOR=vim
export BROWSER=firefox-developer-edition
export CLASSPATH="."
export CHROME_BIN=google-chrome-stable
export VMAIL_BROWSER=firefox
export NODE_REPL_HISTORY_FILE=~/.node_history
export MIX_HOME=$HOME/.mix
export ERL_AFLAGS="-kernel shell_history enabled"
export KEYBASE_SYSTEMD=0

export TEXMFCNF=$HOME/.texlive/texmf-config/web2c:
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk

export ANDROID_SDK_ROOT=/opt/android-sdk
export ANDROID_HOME=/opt/android-sdk

export PASSWORD_STORE_DIR="$HOME/Dropbox/passwords"
export ENCFS6_CONFIG=$HOME/.secrets/dropbox-encfs.xml

export GOPATH="$HOME/workspaces/go"
export EC2_URL=https://ec2.ap-northeast-1.amazonaws.com
export NLTK_DATA="$HOME/.nltk_data"

unset SSH_ASKPASS

if [ -d $HOME/.homesick/repos/homeshick/completions ]; then
  fpath=($HOME/.homesick/repos/homeshick/completions $fpath)
fi

unset PATH

pathdirs=(
  $HOME/.local/bin
  $HOME/.bin
  $HOME/.cabal/bin
  $HOME/.stack/programs/x86_64-linux/ghc-8.0.2/bin
  $HOME/.mix/escripts
  $HOME/.asdf/shims
  $HOME/.config/composer/vendor/bin
  $HOME/.cargo/bin
  $GOPATH/bin
  /opt/android-sdk/platform-tools
  /opt/android-sdk/tools
  /usr/local/bin
  /bin
  /usr/bin
)

for dir in $pathdirs; do
  if [ -d $dir ]; then
    path+=$dir
  fi
done

[[ -f ~/.secrets/exports ]] && . ~/.secrets/exports

